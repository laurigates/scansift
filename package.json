{
  "name": "photoscan",
  "version": "0.1.0",
  "description": "Network-enabled batch photo scanning application for digitizing physical photo collections",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --filter '*' dev:server dev:client",
    "dev:server": "bun --watch src/server/index.ts",
    "dev:client": "vite",
    "build": "bun run build:server && bun run build:client",
    "build:server": "bun build src/server/index.ts --outdir dist/server --target bun",
    "build:client": "vite build",
    "start": "bun dist/server/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:integration": "bun test tests/integration",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "scanner:discover": "bun scripts/discover-scanners.ts",
    "scanner:test": "bun scripts/test-scan.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/static": "^7.0.0",
    "@fastify/websocket": "^10.0.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "bonjour-service": "^1.2.0",
    "chrono-node": "^2.7.0",
    "date-fns": "^3.2.0",
    "drizzle-orm": "^0.29.3",
    "exifreader": "^4.21.0",
    "fastify": "^4.26.0",
    "ky": "^1.2.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.2",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "tesseract.js": "^5.0.4",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^13.3.8",
    "@playwright/test": "^1.41.0",
    "@testing-library/react": "^14.1.2",
    "@types/bun": "latest",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "drizzle-kit": "^0.20.12",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
